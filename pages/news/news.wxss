.news-detail{
    width: 680rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 10rpx;
}

.info-wrapper{
    display: flex;
    font-size: 26rpx;
    position: relative;
    opacity: 0.6;
}

.title{
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    font-size: 48rpx;
}

.info-wrapper .count{
    position: absolute;
    right: 0%;
}
.info-wrapper .time{
    margin-right: 50rpx
}

.content-wrapper{
    margin-top: 60rpx;
}

.content-img{
    width: 100%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.content-text{
    font-size: 35rpx;
    margin-top: 18rpx;
    margin-bottom: 18rpx;
    line-height: 49rpx;
}